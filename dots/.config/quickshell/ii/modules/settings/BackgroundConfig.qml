                    from: 0
                    to: 10
                    stepSize: 1
                    icon: "blur_on"
                    text: Translation.tr("Blur")
                    value: Config.options.background.widgets.media.visualizer.blur
                    onValueChanged: {
                        Config.options.background.widgets.media.visualizer.blur = value;
                    }
                }
            }

        }
